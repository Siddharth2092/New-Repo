<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/overlay_grey"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/overlay_grey" >

  <Button
    android:id="@+id/enable_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/mu_blue_6"
    android:text="@string/perm_enable_btn"
    android:textColor="#FFFFFF" />

  <TextView
    android:id="@+id/terms_privacy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/perm_terms_and_privacy"
    android:textColor="@color/mu_grey_6"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_above="@id/enable_button"
    android:paddingLeft="@dimen/mu_margin_small"
    android:paddingRight="@dimen/mu_margin_small"
    android:layout_marginBottom="@dimen/mu_margin_small"/>

  <TextView
    android:id="@+id/enable_hint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/perm_hint"
    android:textColor="@color/mu_grey_6"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_above="@id/terms_privacy"
    android:layout_marginLeft="@dimen/mu_margin_small"
    android:layout_marginRight="@dimen/mu_margin_small"
    android:layout_marginBottom="@dimen/mu_margin_small" />

  <LinearLayout
    android:id = "@+id/anim_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/enable_hint"
    android:orientation="vertical" >
    
  	        
  </LinearLayout>

    
</RelativeLayout>

